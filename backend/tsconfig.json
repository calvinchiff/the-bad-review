{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"paths": {
			"@shared/*": ["../shared/*"],
			"@/*": ["./*"]
		}
	},
	"include": ["src", "jest.config.ts", "tests"]
}
